<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- HOME ICON TEXT -->
    <style name="home_icon_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- LOGOUT TEXT -->
    <style name="logout_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- LOGOUT NAME -->
    <style name="logout_data_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- HOME ICON TEXT DESC -->
    <style name="home_icon_text_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- COPYRIGHT TEXT -->
    <style name="copyright_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- SELECT SERVICE TEXT -->
    <style name="select_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <!-- SELECT SERVICE HEADING TEXT -->
    <style name="select_text_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <!-- DEVICE ENTRY TEXT -->
    <style name="device_entry_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_toRightOf">@id/device_icon</item>
    </style>  
    
    <!-- VC ENTRY TEXT -->
    <style name="vc_entry_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_toRightOf">@id/layout_card_icon</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!-- VC ENTRY TEXT -->
    <style name="profile_entry_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_toRightOf">@id/profile_card</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <!-- VC ENTRY TEXT -->
    <style name="tx_entry_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_toRightOf">@id/card_icon</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <!-- CREDIT CARD VALUE -->
    <style name="credit_card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Application theme. -->
    <style name="AppDialogTheme" parent="Theme.CustomDialog">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Theme.CustomDialog" parent="android:style/Theme.Holo.Light.Dialog">
	    <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- HYATT -->
    <style name="vc_hotel_entry_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_toRightOf">@id/hotel_icon</item>
    </style>
    
    <!-- LOYALTY -->
    <style name="vc_loyalty_entry_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <!-- VC ENTRY TEXT -->
    <style name="vc_hotel_entry_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_toRightOf">@id/layout_card_icon</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <!-- PURCHASE ENTRY TEXT -->
    <style name="vc_purchase_city">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
     <!-- PURCHASE ENTRY TEXT -->
    <style name="vc_purchase_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <!-- ACTIVITY HEADER -->
    <style name="act_entry_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>